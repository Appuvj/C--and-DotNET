
@{
    ViewBag.Title = "Get Reservation by ID";
}
@model Reservation
<a asp-action="Index" class="btn btn-sm btn-outline-danger btn-info">back</a>
<h3>@ViewBag.StatusCode</h3>
<hr/>
<form method="post">
    <div class="form-group">
        <label for="id">ID: </label>
        <input class="form-control" name="id" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary"> Show Booking Details</button>
    </div>
</form>
@if (Model != null)
{
    <h2>Booking Details</h2>

    <table class="table table-sm table-striped table-bordered m-2">
     <thead>
         <tr>
             <th>ID</th>
             <th>Name</th>
             <th>StartLocation</th>
             <th>EndLocation</th>
           
         </tr>
     </thead>
     <tbody>
          <tr>
            <td>@Model.Id</td>
            <td>@Model.Name</td>
        <td>@Model.StartLocation</td>
        <td>@Model.EndLocation</td>
           
            </tr>
         </tbody>
       </table>
      
        }
